//공지
CREATE TABLE "EZEN"."NOTICE" 
   (	"N_NUMBER" NUMBER(6,0), 
	"USERID" VARCHAR2(30 BYTE), 
	"N_TITLE" VARCHAR2(100 BYTE), 
	"N_CONTENT" VARCHAR2(1000 BYTE), 
	"N_DATE" DATE DEFAULT sysdate
   ) SEGMENT CREATION IMMEDIATE 
  PCTFREE 10 PCTUSED 40 INITRANS 1 MAXTRANS 255 NOCOMPRESS LOGGING
  STORAGE(INITIAL 65536 NEXT 1048576 MINEXTENTS 1 MAXEXTENTS 2147483645
  PCTINCREASE 0 FREELISTS 1 FREELIST GROUPS 1 BUFFER_POOL DEFAULT FLASH_CACHE DEFAULT CELL_FLASH_CACHE DEFAULT)
  TABLESPACE "SYSTEM" ;

//공지사항 번호 자동증가
   CREATE SEQUENCE  "EZEN"."N_NUMBER_SEQ"  MINVALUE 1 MAXVALUE 9999999999999999999999999999 INCREMENT BY 1 START WITH 61 CACHE 20 NOORDER  NOCYCLE ;


//Q&A
CREATE TABLE "EZEN"."QNA" 
   (	"Q_NUMBER" NUMBER(6,0), 
	"USERID" VARCHAR2(30 BYTE), 
	"Q_TITLE" VARCHAR2(100 BYTE), 
	"Q_CONTENT" VARCHAR2(1000 BYTE), 
	"Q_DATE" DATE DEFAULT sysdate, 
	"Q_GROUPS" NUMBER(10,0) DEFAULT 0, 
	"Q_STEP" NUMBER(10,0) DEFAULT 0, 
	"Q_INDENT" NUMBER(10,0) DEFAULT 0, 
	"Q_SECRET" NUMBER(2,0)
   ) SEGMENT CREATION IMMEDIATE 
  PCTFREE 10 PCTUSED 40 INITRANS 1 MAXTRANS 255 NOCOMPRESS LOGGING
  STORAGE(INITIAL 65536 NEXT 1048576 MINEXTENTS 1 MAXEXTENTS 2147483645
  PCTINCREASE 0 FREELISTS 1 FREELIST GROUPS 1 BUFFER_POOL DEFAULT FLASH_CACHE DEFAULT CELL_FLASH_CACHE DEFAULT)
  TABLESPACE "SYSTEM" ;

// Q&A 글번호 자동증가
CREATE SEQUENCE  "EZEN"."Q_NUMBER_SEQ"  MINVALUE 1 MAXVALUE 9999999999999999999999999999 INCREMENT BY 1 START WITH 121 CACHE 20 NOORDER  NOCYCLE ;

